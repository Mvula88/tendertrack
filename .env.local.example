# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Price IDs (from Stripe Dashboard > Products)
STRIPE_PRO_MONTHLY_PRICE_ID=your_pro_monthly_price_id
STRIPE_PRO_ANNUAL_PRICE_ID=your_pro_annual_price_id
STRIPE_TEAM_MONTHLY_PRICE_ID=your_team_monthly_price_id
STRIPE_TEAM_ANNUAL_PRICE_ID=your_team_annual_price_id

# Client-side Price IDs (for checkout)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=your_pro_monthly_price_id
NEXT_PUBLIC_STRIPE_PRO_ANNUAL_PRICE_ID=your_pro_annual_price_id
NEXT_PUBLIC_STRIPE_TEAM_MONTHLY_PRICE_ID=your_team_monthly_price_id
NEXT_PUBLIC_STRIPE_TEAM_ANNUAL_PRICE_ID=your_team_annual_price_id

# Supabase Service Role (for webhooks - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
